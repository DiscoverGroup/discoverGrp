# Admin Panel Configuration
VITE_ADMIN_URL=https://your-admin-panel-url.netlify.app

# API Configuration
VITE_API_BASE_URL=http://localhost:4000

# EmailJS Configuration
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id
VITE_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key
VITE_EMAILJS_PRIVATE_KEY=your_emailjs_private_key

# ==========================================
# PAYMENT PROVIDER CONFIGURATION
# ==========================================

# Payment Mode: demo, sandbox, production
# - demo: No real charges, simulated payments
# - sandbox: Test mode with real providers
# - production: Live payments
VITE_PAYMENT_MODE=demo

# Default payment provider: demo, paymongo, dragonpay, stripe, paypal
VITE_DEFAULT_PAYMENT_PROVIDER=demo

# ==========================================
# PAYMONGO (Philippine Payments)
# ==========================================
# Dashboard: https://dashboard.paymongo.com/developers
# Supports: Cards, GCash, GrabPay, Maya, BillEase

# Secret Key (server-side only - starts with sk_test_ or sk_live_)
VITE_PAYMONGO_SECRET_KEY=

# Public Key (client-side - starts with pk_test_ or pk_live_)
VITE_PAYMONGO_PUBLIC_KEY=

# Webhook Secret (from webhook settings)
VITE_PAYMONGO_WEBHOOK_SECRET=

# ==========================================
# DRAGONPAY (Philippine Bank Payments)
# ==========================================
# Website: https://www.dragonpay.ph/

VITE_DRAGONPAY_MERCHANT_ID=
VITE_DRAGONPAY_SECRET_KEY=

# ==========================================
# STRIPE (International Payments)
# ==========================================
# Dashboard: https://dashboard.stripe.com/apikeys

# Secret Key (server-side - starts with sk_test_ or sk_live_)
VITE_STRIPE_SECRET_KEY=

# Publishable Key (client-side - starts with pk_test_ or pk_live_)
VITE_STRIPE_PUBLISHABLE_KEY=

# Webhook Secret (from webhook settings)
VITE_STRIPE_WEBHOOK_SECRET=

# ==========================================
# PAYPAL (International Payments)
# ==========================================
# Developer Portal: https://developer.paypal.com/

VITE_PAYPAL_CLIENT_ID=
VITE_PAYPAL_CLIENT_SECRET=

# ==========================================
# XENDIT (Alternative Philippine Gateway)
# ==========================================
# Dashboard: https://dashboard.xendit.co/

VITE_XENDIT_SECRET_KEY=
VITE_XENDIT_PUBLIC_KEY=
VITE_XENDIT_WEBHOOK_TOKEN=

# ==========================================
# PAYMENT SECURITY SETTINGS
# ==========================================

# Maximum payment attempts per booking
VITE_MAX_PAYMENT_ATTEMPTS=3

# Rate limit: max payments per minute
VITE_PAYMENT_RATE_LIMIT=3

# Duplicate payment prevention window (seconds)
VITE_DUPLICATE_PAYMENT_WINDOW=5

# Payment link expiration (hours)
VITE_PAYMENT_LINK_EXPIRATION=24